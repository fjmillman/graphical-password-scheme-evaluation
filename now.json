{
  "version": 2,
  "builds": [
    { "src": "next.config.js", "use": "@now/next" },
    { "src": "server.js", "use": "@now/node" }
  ],
  "routes": [
    { "src": "^/result$", "dest": "/server.js" },
    { "src": "^/(.*)$", "dest": "/$1" }
  ],
  "env": {
    "MONGODB_URI": "@mongodb-uri"
  },
  "alias": ["gpa-evaluation"]
}
